" show line number
set nu!

" select color theme
colorscheme desert

" syntax highlight
syntax on

" tab equal to 4 blankspace
set expandtab
set tabstop=4
set cindent shiftwidth=4
set autoindent shiftwidth=4

" For search
set hlsearch
set incsearch

set nocompatible
set autoindent
set ruler
set showcmd

" not generate vim backup file
set nobackup
set nowritebackup
